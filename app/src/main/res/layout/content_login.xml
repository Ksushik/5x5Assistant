<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/content_sign_in"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="hitro.a5x5assistant.LoginActivity"
    tools:showIn="@layout/activity_login">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/dumbell"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:paddingLeft="10dp"
            android:paddingStart="10dp"
            android:text="@string/title_activity_login"
            android:textColor="@color/background_material_red"/>
    </LinearLayout>

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:layout_marginTop="50dp"
        android:ems="10"
        android:hint="@string/prompt_email"
        android:id="@+id/etEmail"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp"
        android:layout_marginBottom="20dp"
        android:padding="7dp"
        android:background="@drawable/textbox"/>

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/etPW"
        android:hint="@string/prompt_password"
        android:padding="7dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp"
        android:background="@drawable/textbox"/>

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:padding="10dp"
        android:text="@string/action_sign_in"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
        android:textSize="18sp"
        android:layout_marginTop="20dp" />

    <TextView
        android:text="@string/forgotPW"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:id="@+id/txtForgotPW"
        android:textSize="12sp"
        android:textColor="@color/background_material_red"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="7dp"
        android:orientation="horizontal">
        <View
            android:background="#ffffff"
            android:layout_width = "0dp"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:layout_weight="0.45"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OR"
            android:textSize="17sp"
            android:paddingLeft="4dp"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:layout_weight="0.10"
            android:width="0dp"
            android:textColor="@color/background_material_red"/>
        <View
            android:background="#ffffff"
            android:layout_width = "0dp"
            android:layout_weight="0.45"
            android:layout_marginTop="8dp"
            android:layout_height="1dp"/>
    </LinearLayout>


    <com.facebook.login.widget.LoginButton
        android:id="@+id/btnFbLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingLeft="80dp"
        android:paddingStart="80dp"
        android:paddingRight="40dp"
        android:paddingEnd="40dp"
        android:textSize="15sp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:layout_marginTop="10dp"/>

    <!--
    <Button
        android:id="@+id/btnFbLogin"
        android:layout_width="match_parent"
        android:text="@string/fbLogin"
        android:layout_height="wrap_content"
        android:textColor="@color/background_material_red"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
        android:paddingLeft="80dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/fblogin_btn"
        android:drawablePadding="-60dp"
        android:drawableLeft="@drawable/com_facebook_button_icon"
        android:drawableStart="@drawable/com_facebook_button_icon"
        />
        -->

    <View
        android:background="#ffffff"
        android:layout_width = "match_parent"
        android:layout_marginTop="35dp"
        android:layout_height="1dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">
        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="0.1" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/background_material_red"
            android:textSize="12sp"
            android:text="@string/signUpPrompt"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtSignUp"
            android:layout_marginLeft="2dp"
            android:textStyle="bold"
            android:textColor="@color/background_material_red"
            android:textSize="12sp"
            android:text="@string/signUpPromptLink"/>
        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="0.1" />
    </LinearLayout>
</LinearLayout>
