<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_stats"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="40dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="hitro.a5x5assistant.StatsActivity"
    tools:showIn="@layout/activity_stats">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/statsPrompt"
        android:layout_marginTop="10dp"
        android:textColor="@color/background_material_red"
        android:paddingTop="20dp"
        android:paddingBottom="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="330dp"
        android:orientation="horizontal">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bw"
                android:paddingTop="28dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/squat"
                android:paddingTop="30dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bench"
                android:paddingTop="30dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/row"
                android:paddingTop="30dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ohp"
                android:paddingTop="35dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dl"
                android:paddingTop="40dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption" />
        </LinearLayout>

        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/etBW"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:paddingTop="20dp"
                android:text=""
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                android:textColor="@android:color/white"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/etSquat"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:text=""
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                android:textColor="@android:color/white"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/etBench"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:text=""
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                android:textColor="@android:color/white"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/etRow"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:text=""
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                android:textColor="@android:color/white"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/etOHP"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:paddingTop="15dp"
                android:text=""
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                android:textColor="@android:color/white"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/etDL"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:paddingTop="20dp"
                android:text=""
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                android:textColor="@android:color/white"
                android:textSize="20sp" />
        </LinearLayout>

        <Space
            android:layout_width="5dp"
            android:layout_height="match_parent" />

        <LinearLayout
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/txtUnits1s"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="29dp"
                android:textColor="@color/accent_material_red"
                android:textSize="12sp"
                android:text="@string/lb" />
            <TextView
                android:id="@+id/txtUnits2s"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="31dp"
                android:textColor="@color/accent_material_red"
                android:textSize="12sp"
                android:text="@string/lb" />
            <TextView
                android:id="@+id/txtUnits3s"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="32dp"
                android:textColor="@color/accent_material_red"
                android:textSize="12sp"
                android:text="@string/lb" />
            <TextView
                android:id="@+id/txtUnits4s"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="30dp"
                android:textColor="@color/accent_material_red"
                android:textSize="12sp"
                android:text="@string/lb" />
            <TextView
                android:id="@+id/txtUnits5s"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="33dp"
                android:textColor="@color/accent_material_red"
                android:textSize="12sp"
                android:text="@string/lb" />
            <TextView
                android:id="@+id/txtUnits6s"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="39dp"
                android:textColor="@color/accent_material_red"
                android:textSize="12sp"
                android:text="@string/lb" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:text="@string/saveStats"
        android:id="@+id/btnUpdStats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>

